<%= form_with(model: vaccine) do |form| %>
  <% if vaccine.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(vaccine.errors.count, "error") %> prohibited this vaccine from being saved:</h2>

      <ul>
        <% vaccine.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :reference %>
    <%= form.text_field :reference %>
  </div>

  <div class="field">
    <%= form.label :composition %>
    <%= form.text_area :composition %>
  </div>

  <div class="field">
    <%= form.label :vaccine_booster_delay_in_days %>
    <%= form.number_field :vaccine_booster_delay_in_days %>
  </div>

  <div class="field">
    <%= form.label :mandatory %>
    <%= form.check_box :mandatory %>
  </div>

  <div class="field">
    <%=form.label :countries %>
    <div class="container__tags__form">
      <% @countries.each do |country| %>
        <div>
          <input value=<%=country.id%> name="country[]" type="checkbox" <%= @vaccines_available_by_country  != nil ? (@vaccines_available_by_country.find_by(vaccine_id:@vaccine_id, country_id: country.id)? "checked" : "" ) : "" %> ><%= country.name %>
        </div>
      <%end%>
    </div>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
