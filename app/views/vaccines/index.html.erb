<p id="notice"><%= notice %></p>

<h1>Vaccines</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Reference</th>
      <th>Composition</th>
      <th>Vaccine booster delay in days</th>
      <th>Mandatory</th>
      <th>Available country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vaccines.each do |vaccine| %>
      <tr>
        <td><%= vaccine.name %></td>
        <td><%= vaccine.reference %></td>
        <td><%= vaccine.composition %></td>
        <td><%= vaccine.vaccine_booster_delay_in_days %></td>
        <td><%= vaccine.mandatory %></td>
        <td>   
            <%=countries_of(vaccine)%>
        </td>
        <td><%= link_to 'Show', vaccine %></td>
        <td><%= link_to 'Edit', edit_vaccine_path(vaccine) %></td>
        <td><%= link_to 'Destroy', vaccine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

